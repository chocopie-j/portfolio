{
  "name": "portfolio",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build:html": "copyfiles -u 1 src/*.html dist",
    "build:sass": "sass src/assets/scss:dist/assets/css",
    "build:images": "copyfiles -u 2 src/assets/images/** dist/assets",
    "copy:docs": "copyfiles -u 1 dist/**/* docs",
    "build": "npm-run-all build:html build:sass build:images copy:docs",

    "watch:html": "chokidar \"src/**/*.html\" -c \"npm run build:html\"",
    "watch:images": "chokidar \"src/assets/images/**\" -c \"npm run build:images\"",
    "watch:sass": "sass --watch src/assets/scss:dist/assets/css",
    "serve": "live-server dist",
    "dev": "npm-run-all --parallel watch:html watch:images watch:sass serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chocopie-j/portfolio.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/chocopie-j/portfolio/issues"
  },
  "homepage": "https://github.com/chocopie-j/portfolio#readme",
  "description": "",
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "copyfiles": "^2.4.1",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "sass": "^1.94.2"
  }
}
